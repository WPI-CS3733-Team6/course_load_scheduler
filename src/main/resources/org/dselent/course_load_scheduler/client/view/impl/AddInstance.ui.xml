<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}

	.tableHeader{
		background:#494949;
		color:#ffffff;
		font-weight:bold;
	}

	.layoutPanel{
		background-color:#DCDCDC;
	}

	.layoutPanelB{
		background-color:#C1C1C1;
	}

	.whiteButton{
		background:#ffffff;
	}

	.greenButton{
		background:#78e268;
	}

	.redButton{
		background:#e0634a;
	}

	.orangeButton{
		background:#efbb43;
	}

	</ui:style>
	<g:HTMLPanel>
		<g:DockLayoutPanel unit="PCT" width="100%" height="100%">
			<g:north size="24.0">
					<g:LayoutPanel width="100%" height="95%" ui:field="instanceInfoPanel" styleName="{style.layoutPanelB}">
					
						<g:layer left="10.0pct" width="100.0pct" top="15.0pct" height="35.0pct">
							<g:TextBox width="20%" height="100%" text="Course Num" ui:field="courseNumberHeader" styleName="{style.tableHeader}" readOnly="true"/>
						</g:layer>
						<g:layer left="30.0pct" width="100.0pct" top="15.0pct" height="35.0pct">
							<g:TextBox width="20%" height="100%" text="Instance No" ui:field="instanceNumberHeader" styleName="{style.tableHeader}" readOnly="true"/>
						</g:layer>
						<g:layer left="70.0pct" width="100.0pct" top="15.0pct" height="35.0pct">
							<g:TextBox height="100%" text="Term" width="20%" ui:field="termHeader" styleName="{style.tableHeader}" readOnly="true"/>
						</g:layer>

						
						<g:layer left="10.0pct" width="100.0pct" top="50.0pct" height="35.0pct">
							<g:TextBox width="20%" height="100%" ui:field="courseNumberField" enabled="false"/>
						</g:layer>
						<g:layer left="30.0pct" width="100.0pct" top="50.0pct" height="35.0pct">
							<g:TextBox width="20%" height="100%" ui:field="instanceNumberField" enabled="false"/>
						</g:layer>
						<g:layer left="70.0pct" width="100.0pct" top="50.0pct" height="35.0pct">
							<g:ListBox width="20%" height="100%" ui:field="termList">
								<g:item>
									A Term
								</g:item>
								<g:item>
									B Term
								</g:item>
								<g:item>
									C Term
								</g:item>
								<g:item>
									D Term
								</g:item>
								<g:item>
									Fall
								</g:item>
								<g:item>
									Spring
								</g:item>
							</g:ListBox>
						</g:layer>
					</g:LayoutPanel>
				</g:north>
				
				<g:south size="20.0">
					<g:LayoutPanel width="100%" height="100%" styleName="{style.layoutPanelB}" ui:field="saveDeletePanel">
						<g:layer left="40%" width="25%" top="20%" height="60%">
							<g:Button text="Save Changes" styleName="{style.greenButton}" ui:field="saveButton"/>
						</g:layer>
						<g:layer left="5%" width="30%" top="20%" height="60%">
							<g:Button text="Back to Course" ui:field="backButton" styleName="{style.whiteButton}"/>
						</g:layer>
						<g:layer left="70%" width="25%" top="20%" height="60%">
							<g:Button text="Delete Instance" styleName="{style.redButton}" ui:field="deleteButton"/>
						</g:layer>
					
					</g:LayoutPanel>
				</g:south>
				
				<g:center>
					<g:LayoutPanel width="100%" height="100%" styleName="{style.layoutPanel}" ui:field="sectionInfoPanel">
						<g:layer left="5%" width="40%" top="5%" height="90%">
							<g:FlexTable ui:field="sectionInfoList">
							</g:FlexTable>
						</g:layer>
						<g:layer left="50%" width="20%" top="5%" height="90%">
							<g:ListBox visibleItemCount="5" ui:field="sectionDropList"/>
						</g:layer>
						<g:layer left="75%" width="20%" top="20%" height="25%">
							<g:Button text="Create Section" styleName="{style.greenButton}" ui:field="createSectionButton"/>
						</g:layer>
						<g:layer left="75%" width="20%" top="55%" height="25%">
							<g:Button text="Edit Section" styleName="{style.orangeButton}" ui:field="editSectionButton"/>
						</g:layer>
					</g:LayoutPanel>
				</g:center>
			</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 