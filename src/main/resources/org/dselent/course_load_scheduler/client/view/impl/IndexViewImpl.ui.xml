<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.loading-glass-panel
		{
		position:fixed;
		width:100%;
		height:100%;
		visibility:hidden;
		}

		.gwt-popup-panel-glass
		{
		background-color:rgb(0, 0,
		0);
		opacity:0.8;
		}

		.loading-image
		{
		position:fixed;
		display:block;
		margin-left:50%;
		margin-right:50%;
		z-index: 1;
		visibility:hidden;
		}

		.panel-grey {
		background: #DCDCDC;
		}

		.button-bluelight {
		color: white;
		font-size: 12px;
		font-family: Times New Roman;
		background: #05abc1;
		}

.button-red {
		color: white;
		font-size: 12px;
		font-family: Times New Roman;
		background: #d65355;
		}
	</ui:style>

	<g:VerticalPanel>
		<g:Cell horizontalAlignment="ALIGN_CENTER">
			<g:HTMLPanel ui:field="topPanel" height="60px">
				<g:LayoutPanel width="100%" height="60px" ui:field="layoutPanel">
					<g:layer bottom="3.0pct" top="18.0pct" right="2.8pct" left="2.8pct">
						<g:AbsolutePanel width="100%" height="100%"
							ui:field="absolutePanel" addStyleNames="{style.panel-grey}">
							<g:at top="0" left="0">
								<g:LayoutPanel width="100%" height="100%"
									ui:field="innerlayoutPanel">
									<g:layer left="1.5pct" width="100.0pct" top="2.0pct" height="100.0pct">
										<g:Label text="You are logged in as: ID / Name" width="30%"
											height="100%" ui:field="identification" horizontalAlignment="ALIGN_LEFT"
											direction="RTL" />
									</g:layer>
									<g:layer left="80.0pct" width="12.0pct" top="0.0pct"
										height="75.0pct">
										<g:Button ui:field="logout" addStyleNames="{style.button-red}">Logout</g:Button>
									</g:layer>
									<g:layer left="65.0pct" width="10.0pct" top="0.0pct"
										height="75.0pct">
										<g:Button ui:field="home" addStyleNames="{style.button-bluelight}" >Home</g:Button>
									</g:layer>
									<g:layer left="43.0pct" width="22.0pct" top="0.0pct"
										height="75.0pct">
										<g:Button ui:field="viewCurrentClasses" text="View Current Classes"
											addStyleNames="{style.button-bluelight}" />
									</g:layer>
								</g:LayoutPanel>
							</g:at>
						</g:AbsolutePanel>
					</g:layer>
				</g:LayoutPanel>
			</g:HTMLPanel>
		</g:Cell>
		<g:Cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
			<g:HTMLPanel ui:field="middlePanel" height="382px" />
		</g:Cell>
		<g:Cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_BOTTOM">
			<g:HTMLPanel height="40px" ui:field="bottonPanel">
				<g:LayoutPanel width="100%" height="100%" ui:field="lowerPanel" addStyleNames="{style.panel-grey}" >
					<g:layer top="0.0pct" bottom="0.0pct" right="0.0pct" left="40.0pct">
						<g:Button width="30%" height="50%%" ui:field="reportAProblem">Report A Problem</g:Button>
					</g:layer>
				</g:LayoutPanel>
			</g:HTMLPanel>
		</g:Cell>
	</g:VerticalPanel>

</ui:UiBinder> 