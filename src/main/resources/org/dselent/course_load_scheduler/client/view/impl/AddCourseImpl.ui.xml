<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.tableHeader{
		background:#494949;
		color:#ffffff;
		font-weight:bold;
	}

	.layoutPanel{
		background-color:#DCDCDC;
	}

	.layoutPanelB{
		background-color:#C1C1C1;
	}

	.greenButton{
		background:#78e268;
	}

	.redButton{
		background:#e0634a;
	}

	.orangeButton{
		background:#efbb43;
	}

	</ui:style>
	<g:HTMLPanel>
		<g:DockLayoutPanel width="100%" height="100%" unit="PCT">
			<g:north size="24.0">
				<g:LayoutPanel width="100%" height="95%" ui:field="courseInfoPanel" styleName="{style.layoutPanelB}">
					<g:layer left="2.0pct" width="100.0pct" top="15.0pct" height="35.0pct">
						<g:TextBox width="39%" height="100%" text="Course name" ui:field="courseNameHeader" enabled="false" styleName="{style.tableHeader}"/>
					</g:layer>
					<g:layer left="41.0pct" width="100.0pct" top="15.0pct" height="35.0pct">
						<g:TextBox height="100%" text="Course Number" width="23%" ui:field="courseNumberHeader" enabled="false" styleName="{style.tableHeader}"/>
					</g:layer>
					<g:layer left="82.0pct" width="100.0pct" top="15.0pct" height="35.0pct">
						<g:TextBox height="100%" text="Type" width="16%" ui:field="statusHeader" enabled="false" styleName="{style.tableHeader}"/>
					</g:layer>
					<g:layer left="64.0pct" width="100.0pct" top="15.0pct" height="35.0pct">
						<g:TextBox height="100%" text="Level" width="18%" ui:field="instanceNumberHeader" enabled="false" styleName="{style.tableHeader}"/>
					</g:layer>
					
					<g:layer left="2.0pct" width="100.0pct" top="50.0pct" height="35.0pct">
						<g:TextBox width="39%" height="100%" ui:field="courseNameField" enabled="true"/>
					</g:layer>
					<g:layer left="41.0pct" width="100.0pct" top="50.0pct" height="35.0pct">
						<g:TextBox height="100%" width="21%" ui:field="courseNumberField" enabled="true"/>
					</g:layer>
					<g:layer left="82.0pct" width="100.0pct" top="50.0pct" height="35.0pct">
						<g:TextBox height="100%" width="14%" ui:field="statusField" enabled="true"/>
					</g:layer>
					<g:layer left="64.0pct" width="100.0pct" top="50.0pct" height="35.0pct">
						<g:TextBox height="100%" width="16%" ui:field="instanceNumberField" enabled="true"/>
					</g:layer>
				</g:LayoutPanel>
			</g:north>
			
			<g:south size="20.0">
				<g:LayoutPanel width="100%" height="100%" styleName="{style.layoutPanelB}" ui:field="saveDeletePanel">
					<g:layer left="15%" width="30%" top="20%" height="60%">
						<g:Button text="Save Changes" styleName="{style.greenButton}" ui:field="saveCourseButton"/>
					</g:layer>
					<g:layer left="55%" width="30%" top="20%" height="60%">
						<g:Button text="Delete Course" styleName="{style.redButton}" ui:field="deleteCourseButton"/>
					</g:layer>
				
				</g:LayoutPanel>
			</g:south>
			
			<g:center>
				<g:DockLayoutPanel unit="PCT" width="100%" height="100%" styleName="{style.layoutPanel}">
					<g:east size="45">
						<g:LayoutPanel width="100%" height="100%" styleName="{style.layoutPanel}" ui:field="instancePanel">
							<g:layer left="5%" width="50%" top="5%" height="90%">
								<g:ListBox visibleItemCount="8" styleName="dialogVPanel" ui:field="instanceList">
								</g:ListBox>
							</g:layer>
							<g:layer left="60%" width="33%" top="20%" height="25%">
								<g:Button text="Create Instance" styleName="{style.greenButton}" ui:field="createInstanceButton"/>
							</g:layer>
							<g:layer left="60%" width="33%" top="55%" height="25%">
								<g:Button text="Edit Instance" styleName="{style.orangeButton}" ui:field="editInstanceButton"/>
							</g:layer>
							
						</g:LayoutPanel>
					</g:east>
					<g:center>
						<g:LayoutPanel ui:field="descriptionPanel">
							<g:layer left="0%" width="100%" top="0%" height="15%">
								<g:TextBox text="Course Description" alignment="CENTER" enabled="false" styleName="{style.tableHeader}" ui:field="courseDescHeader"/>
							</g:layer>
							
							<g:layer left="0%" width="100%" height="85%" top="15%">
								<g:TextArea ui:field="courseDescField"/>
							</g:layer>
							
						</g:LayoutPanel>
					</g:center>
				</g:DockLayoutPanel>
			</g:center>
			
		</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 