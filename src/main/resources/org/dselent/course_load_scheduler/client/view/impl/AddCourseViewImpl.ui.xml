<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.tableHeader{
		background:#494949;
		color:#ffffff;
		font-weight:bold;
	}

	.layoutPanel{
		background-color:#DCDCDC;
	}

	.layoutPanelB{
		background-color:#C1C1C1;
	}

	.greenButton{
		background:#78e268;
	}

	.redButton{
		background:#e0634a;
	}

	.orangeButton{
		background:#efbb43;
	}

	</ui:style>
	<g:HTMLPanel ui:field="rootPanel">
		<g:DockLayoutPanel width="100%" height="100%" unit="PCT">
			<g:north size="35.0">
				<g:LayoutPanel width="100%" height="95%" ui:field="courseInfoPanel" styleName="{style.layoutPanelB}">
					<g:layer left="2.0pct" width="100.0pct" top="5.0pct" height="23.0pct">
						<g:TextBox width="96%" height="100%" text="Course name" ui:field="courseNameHeader" styleName="{style.tableHeader}" readOnly="true" name="0"/>
					</g:layer>
					<g:layer left="2.0pct" width="100.0pct" top="51.0pct" height="23.0pct">
						<g:TextBox height="100%" text="Course Number" width="23%" ui:field="courseNumberHeader" styleName="{style.tableHeader}" readOnly="true"/>
					</g:layer>
					<g:layer left="25.0pct" width="100.0pct" top="51.0pct" height="23.0pct">
						<g:TextBox height="100%" text="Type" width="25%" ui:field="typeHeader" styleName="{style.tableHeader}" readOnly="true"/>
					</g:layer>
					<g:layer left="50.0pct" width="100.0pct" top="51.0pct" height="23.0pct">
						<g:TextBox height="100%" text="Level" width="25%" ui:field="levelHeader" styleName="{style.tableHeader}" readOnly="true"/>
					</g:layer>
					<g:layer left="75.0pct" width="100.0pct" top="51.0pct" height="23.0pct">
						<g:TextBox height="100%" text="Department" width="23%" ui:field="departmentHeader" styleName="{style.tableHeader}" readOnly="true"/>
					</g:layer>
					
					<g:layer left="2.0pct" width="100.0pct" top="28.0pct" height="23.0pct">
						<g:TextBox width="94%" height="100%" ui:field="courseNameField"/>
					</g:layer>
					<g:layer left="2.0pct" width="100.0pct" top="74.0pct" height="23.0pct">
						<g:TextBox height="100%" width="23%" ui:field="courseNumberField"/>
					</g:layer>
					<g:layer left="25.0pct" width="100.0pct" top="74.0pct" height="23.0pct">
						<g:TextBox height="100%" width="25%" ui:field="typeField"/>
					</g:layer>
					<g:layer left="50.0pct" width="100.0pct" top="74.0pct" height="23.0pct">
						<g:ListBox height="100%" width="25%" ui:field="levelList">
							<g:item>
								Undergraduate
							</g:item>
							<g:item>
								Graduate
							</g:item>
						</g:ListBox>
					</g:layer>
					<g:layer left="75.0pct" width="23.0pct" top="74.0pct" height="23.0pct">
						<g:TextBox height="100%" width="100%" ui:field="departmentField"/>
					</g:layer>
					<g:layer left="110.0pct" width="0pct" top="110pct" height="0pct">
						<g:IntegerBox height="0%" width="0%" ui:field="courseIdField" value="0"/>
					</g:layer>
				</g:LayoutPanel>
			</g:north>
			
			<g:south size="15.0">
				<g:LayoutPanel width="100%" height="100%" styleName="{style.layoutPanelB}" ui:field="saveDeletePanel">
					<g:layer left="15%" width="30%" top="15%" height="70%">
						<g:Button width="100%" height="100%" text="Save Changes" styleName="{style.greenButton}" ui:field="saveCourseButton"/>
					</g:layer>
					<g:layer left="55%" width="30%" top="15%" height="70%">
						<g:Button width="100%" height="100%" text="Delete Course" styleName="{style.redButton}" ui:field="deleteCourseButton"/>
					</g:layer>
				
				</g:LayoutPanel>
			</g:south>
			
			<g:center>
				<g:DockLayoutPanel unit="PCT" width="100%" height="100%" styleName="{style.layoutPanel}">
					<g:east size="45">
						<g:LayoutPanel width="100%" height="100%" styleName="{style.layoutPanel}" ui:field="instancePanel">
							<g:layer left="5%" width="50%" top="5%" height="90%">
								<g:ListBox visibleItemCount="8" styleName="dialogVPanel" ui:field="instanceList">
								</g:ListBox>
							</g:layer>
							<g:layer left="60%" width="33%" top="20%" height="25%">
								<g:Button text="Create Instance" styleName="{style.greenButton}" ui:field="createInstanceButton"/>
							</g:layer>
							<g:layer left="60%" width="33%" top="55%" height="25%">
								<g:Button text="Edit Instance" styleName="{style.orangeButton}" ui:field="editInstanceButton"/>
							</g:layer>
							
						</g:LayoutPanel>
					</g:east>
					<g:center>
						<g:LayoutPanel ui:field="descriptionPanel" width="100%" height="100%" styleName="{style.layoutPanel}">
							<g:layer left="0%" width="100%" top="0%" height="15%">
								<g:TextBox text="Course Description" alignment="CENTER" styleName="{style.tableHeader}" ui:field="courseDescHeader" readOnly="true"/>
							</g:layer>
							
							<g:layer left="0%" width="100%" height="85%" top="15%">
								<g:TextArea ui:field="courseDescField"/>
							</g:layer>
							
						</g:LayoutPanel>
					</g:center>
				</g:DockLayoutPanel>
			</g:center>
			
		</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 