<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.panel-grey {
		background: #DCDCDC;
		}

		.button-green {
		color: white;
		font-size: 12px;
		font-family: Times New Roman;
		background: #06c94a;
		}

		.button-red{
		color: white;
		font-size: 12px;
		font-family: Times New Roman;
		background:#d13506;
		}
	</ui:style>
	<g:HTMLPanel ui:field="rootPanel" width="100%" height="100%">
		<g:LayoutPanel width="100%" height="100%" addStyleNames="{style.panel-grey}">
			<g:layer left="15.0pct" top="2.5pct" right="50.0pct" bottom="89.7pct">
				<g:Button text="Submit for approval" ui:field="submitForApproval"
					width="100%" height="100%" styleName="gwt-DialogBox" addStyleNames="{style.button-green}" />
			</g:layer>
			<g:layer left="60.0pct" top="2.5pct" right="15.0pct" bottom="89.7pct">
				<g:Button text="Remove" ui:field="removeCourse" width="100%"
					height="100%" addStyleNames="{style.button-red}" styleName="{style.button-red}" />
			</g:layer>
			<g:layer height="100.0pct" top="12.5pct">
				<g:LayoutPanel width="100%" height="87.5%">
					<g:layer>
						<g:FlexTable width="100%" height="100%" borderWidth="1"
							cellPadding="1" cellSpacing="1" ui:field="flexTableFor" />
					</g:layer>
				</g:LayoutPanel>
			</g:layer>
		</g:LayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 