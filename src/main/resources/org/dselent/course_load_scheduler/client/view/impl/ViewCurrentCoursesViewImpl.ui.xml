<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel width="100%" height="100%" ui:field="rootPanel">
		<g:LayoutPanel width="100%" height="100%">
			<g:layer>
				<g:TabPanel width="100%" height="100vh" animationEnabled="true">
					<g:Tab text="Current Courses">
						<g:LayoutPanel width="100%" height="70vh" ui:field="currentCourses">
							<g:layer>
								<g:ScrollPanel width="100%" height="100%" ui:field="panelForScrollingCourseTable" alwaysShowScrollBars="true">
									<g:FlexTable width="100%" height="100%" ui:field="tableDisplayCurrentCourses"/>
								</g:ScrollPanel>
							</g:layer>
						</g:LayoutPanel>
					</g:Tab>
					<g:Tab text="Detailed Schedule">
						<g:LayoutPanel width="100%" height="70vh" ui:field="detailedSchedule">
							<g:layer>
								<g:ScrollPanel ui:field="panelForScrollingDetailedSchedule" width="100%" height="100%" alwaysShowScrollBars="true">
									<g:FlexTable width="100%" height="100%" ui:field="tableDisplayDetailedSchedule"/>
								</g:ScrollPanel>
							</g:layer>
						</g:LayoutPanel>
					</g:Tab>
				</g:TabPanel>
			</g:layer>
		</g:LayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 