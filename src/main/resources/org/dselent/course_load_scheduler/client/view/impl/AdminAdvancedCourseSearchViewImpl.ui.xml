<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}

	.tableHeader{
		background:#494949;
		color:#ffffff;
		font-weight:bold;
	}

	.layoutPanel{
		background-color:#DCDCDC;
	}

	.layoutPanelB{
		background-color:#C1C1C1;
	}

	.greenButton{
		background:#78e268;
	}

	.redButton{
		background:#e0634a;
	}

	.orangeButton{
		background:#efbb43;
	}

	.blueButton{
		background:#7FCEE2;
	}

	</ui:style>
	<g:HTMLPanel ui:field="basePanel">
		<g:DockLayoutPanel unit="PCT" width="100%" height="100%">
			<g:north size="30.0">
				<g:LayoutPanel width="100%" height="100%" styleName="{style.layoutPanel}" ui:field="searchPanel">
					<g:layer left="4%" width="18%" top="5%" height="30%">
						<g:ListBox ui:field="termList">
							<g:item>
								A Term
							</g:item>
							<g:item>
								B Term
							</g:item>
							<g:item>
								C Term
							</g:item>
							<g:item>
								D Term
							</g:item>
							<g:item>
								Fall
							</g:item>
							<g:item>
								Spring
							</g:item>
						</g:ListBox>
					</g:layer>
					<g:layer left="26%" width="18%" top="5%" height="30%">
						<g:ListBox ui:field="departmentList">
							<g:item>
								CS
							</g:item>
							<g:item>
								MA
							</g:item>
							<g:item>
								IMGD
							</g:item>
							<g:item>
								FY
							</g:item>
						</g:ListBox>
					</g:layer>
					
					<g:layer left="47%" width="25%" top="5%" height="30%">
						<g:ListBox ui:field="levelList">
							<g:item>
								Undergraduate
							</g:item>
							<g:item>
								Graduate
							</g:item>
						</g:ListBox>
					</g:layer>
					<g:layer left="75%" width="20%" top="10%" height="35%">
						<g:Button text="Add Course" styleName="{style.greenButton}" ui:field="addCourseButton"/>
					</g:layer>
					<g:layer left="75%" width="20%" top="55%" height="35%">
						<g:Button text="Search" styleName="{style.blueButton}" ui:field="searchButton"/>
					</g:layer>
					<g:layer left="4%" width="15%" top="50%" height="30%">
						<g:TextBox readOnly="true" text="Name" styleName="{style.tableHeader}" ui:field="courseNameHeader"/>
					</g:layer>
					<g:layer left="19%" width="50%" top="50%" height="30%">
						<g:TextBox ui:field="courseNameField"/>
					</g:layer>
				</g:LayoutPanel>
			</g:north>
			<g:center>
				<g:LayoutPanel width="100%" height="100%" styleName="{style.layoutPanelB}" ui:field="resultPanel">
					<g:layer left="5.0pct" width="90.0pct" top="5%" height="90%">
						<g:FlexTable ui:field="resultList"/>
					</g:layer>
				</g:LayoutPanel>
			</g:center>
		
		</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 