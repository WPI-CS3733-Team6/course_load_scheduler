<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.main-title
		{
		font-family:Times New Roman;
		font-size:30px;
		font-weight: bold;
		margin-top:4px;
		padding-right:5px;
		background:
		#DCDCDC;
		}

		.button-green {
		color: white;
		font-size: 12px;
		font-family:
		Times New Roman;
		background: #13c144;
		}

		.button-yellowish {
		color: white;
		font-size: 12px;
		font-family: Times New Roman;
		background: #fcb605;
		}

		.back-tab {
		background-color: #DCDCDC;
		}

		.grey-back {
		background: #DCDCDC;
		}

		.button-bluelight {
		color: white;
		font-size: 12px;
		font-family: Times
		New Roman;
		background: #05abc1;
		}

		.panel-grey {
		background: #DCDCDC;
		}

		.panel-greydark {
		background: #989b9b;
		}

		.button-blue {
		color: white;
		font-size: 12px;
		font-family: Times
		New Roman;
		background: #0558b2;
		}
	</ui:style>



	<g:HTMLPanel ui:field="rootPanel" width="450"
		height="300">

		<g:LayoutPanel width="100%" height="100%" ui:field="layoutPanel">
			<g:layer top="0.0pct" bottom="0.0pct" left="0.0pct" right="0.0pct">
				<g:DecoratedTabPanel width="100%" height="100%"
					ui:field="tabPanel" styleName="serverResponseLabelError">
					<g:Tab text="View as Administrator">
						<g:LayoutPanel width="100%" height="250px"
							addStyleNames="{style.back-tab}" ui:field="viewAsAdmin">
							<g:layer left="2.0pct" width="40.0pct" top="3.0pct"
								height="12.0pct">
								<g:TextBox text="Department:"
									alignment="CENTER" width="100%" height="100%" addStyleNames="{style.grey-back}" ui:field="departmentName" readOnly="true" styleName="h1" />
							</g:layer>
							<g:layer left="0.0pct" width="47.0pct" top="22.2pct"
								height="62.5pct">
								<g:ListBox visibleItemCount="5" ui:field="departmentList" />
							</g:layer>
							<g:layer left="50.0pct" width="47.0pct" top="22.5pct" height="63.2pct">
								<g:ListBox visibleItemCount="5" ui:field="coursesList" />
							</g:layer>
							<g:layer left="15.0pct" width="15.0pct" top="88.0pct" height="8.0pct">
								<g:Button addStyleNames="{style.button-green}" ui:field="addUserButton" width="100%" height="100%">Add User</g:Button>
							</g:layer>
							<g:layer left="32.0pct" width="15.0pct" top="88.0pct" height="8.0pct">
								<g:Button addStyleNames="{style.button-yellowish}" ui:field="editUserButton">Edit User</g:Button>
							</g:layer>
							<g:layer left="65.0pct" width="15.0pct" top="88.0pct" height="8.0pct">
								<g:Button addStyleNames="{style.button-green}" ui:field="addCourseButton">Add Course</g:Button>
							</g:layer>
							<g:layer left="82.0pct" width="15.0pct" top="88.0pct" height="8.0pct">
								<g:Button addStyleNames="{style.button-yellowish}" ui:field="modifyCourseButton">Modify Course</g:Button>
							</g:layer>
							<g:layer left="52.0pct" width="40.0pct" top="3.0pct" height="12.0pct">
								<g:TextBox text="Recently Added/Changed:"
									alignment="CENTER" width="100%" height="100%" addStyleNames="{style.grey-back}" ui:field="courseText" readOnly="true" styleName="h1" />
							</g:layer>
						</g:LayoutPanel>
					</g:Tab>
					<g:Tab text="View As Instructor">
						<g:LayoutPanel width="100%" height="250px"
									addStyleNames="{style.panel-grey}" ui:field="viewAsInstructor">
									<g:layer left="25.0pct" width="50pct" top="22.5pct"
										height="10.0pct">
										<g:Button text="Generate Complete Department Schedule"
											width="100%" ui:field="generatedCompleteDepartmentSchedule" height="100%" addStyleNames="{style.button-blue}"/>
									</g:layer>
									<g:layer top="35.0pct" height="62.0pct" left="0.0pct"
										right="0.0pct">
										<g:LayoutPanel width="100%" height="100%"
											addStyleNames="{style.panel-grey}" ui:field="courseSummariesPanel">
											<g:layer left="4.5pct" right="3.5pct" top="10.0pct"
												bottom="2.2pct">
												<g:SplitLayoutPanel width="100%" height="100%" ui:field="table">
													<g:north size="26.0">
														<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER"
															verticalAlignment="ALIGN_MIDDLE" width="100%" height="100%" ui:field="north">
															<g:Cell verticalAlignment="ALIGN_MIDDLE">
																<g:TextBox width="100%" height="100%"
																text="Registered Courses" addStyleNames="{style.panel-greydark}" readOnly="true" styleName="h1" direction="LTR" visibleLength="0" textAlignment="ALIGN_CENTER" />
															</g:Cell>
															<g:Cell horizontalAlignment="ALIGN_RIGHT">
																<g:TextBox width="65%" height="100%"
																text="Pending Courses" addStyleNames="{style.panel-greydark}" readOnly="true" styleName="h1" textAlignment="ALIGN_CENTER" />
															</g:Cell>
														</g:HorizontalPanel>
													</g:north>
													<g:west size="262.0">
														<g:ListBox visibleItemCount="5" width="80%"
															height="100%" ui:field="registeredCoursesList" />
													</g:west>
													<g:center>
														<g:ListBox visibleItemCount="6" ui:field="pendingCoursesList" width="100%" height="100%" />
													</g:center>
												</g:SplitLayoutPanel>
											</g:layer>
										</g:LayoutPanel>
									</g:layer>
									<g:layer left="2.0pct" top="0.0pct" height="50.0pct"
										right="2.0pct">
										<g:HorizontalPanel width="100%" height="40%"
											horizontalAlignment="ALIGN_CENTER" ui:field="horizontalPanel" borderWidth="0" verticalAlignment="ALIGN_MIDDLE">
											<g:Cell height="">
												<g:Button ui:field="currentClassesButton" text="Current Classes"
												width="100%" height="100%" />
											</g:Cell>
											<g:Button text="Search for Classes" width="100%"
												height="100%" ui:field="searchClassesButton" />
											<g:Button width="100%" height="100%" ui:field="accountInfoButton">Account Info</g:Button>
											<g:Button width="100%" height="100%" ui:field="courseRegistrationCartButton">Course Registration
												Cart</g:Button>
										</g:HorizontalPanel>
									</g:layer>
								</g:LayoutPanel>
					</g:Tab>
				</g:DecoratedTabPanel>
			</g:layer>
		</g:LayoutPanel>

	</g:HTMLPanel>


</ui:UiBinder> 