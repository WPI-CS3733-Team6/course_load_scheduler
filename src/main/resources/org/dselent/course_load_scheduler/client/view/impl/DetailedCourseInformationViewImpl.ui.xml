<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

		.view-label
	{
		font-family: Times New Roman;
		font-size: 24px;
		font-weight: bold;
	}

	</ui:style>
	<g:HTMLPanel width="450px" height="300px" ui:field="rootPanel">
		<g:LayoutPanel width="100%" height="100%" ui:field="LayoutPanel">
			<g:layer left="3.0pct" width="30.0pct" height="10.0pct" bottom="5.0pct">
				<g:Button ui:field="returnToSearchButton" width="" height="" styleName="gwt-Button Advanced">Return to Search</g:Button>
			</g:layer>
			<g:layer height="25.0pct" bottom="22.0pct" right="5.0pct" left="2.5pct">
				<g:TextBox text="Course Description" ui:field="description" readOnly="true" textAlignment="ALIGN_LEFT" direction="LTR" alignment="LEFT" visibleLength="2000" width="100%" height="100%"/>
			</g:layer>
			<g:layer left="60.0pct" height="10.0pct" bottom="5.0pct" right="10.0pct">
				<g:Button ui:field="submitToCartButton">Submit to Cart</g:Button>
			</g:layer>
			<g:layer left="3.0pct" width="20.0pct" top="15.0pct" height="5.0pct">
				<g:Label text="Course Name:" width="100%" height="100%" horizontalAlignment="ALIGN_LEFT"/>
			</g:layer>
			<g:layer left="3.0pct" width="21.0pct" top="22.0pct" height="5.0pct">
				<g:Label text="Course Number:" horizontalAlignment="ALIGN_LEFT"/>
			</g:layer>
			<g:layer left="3.0pct" width="10.0pct" top="29.0pct" height="5.0pct">
				<g:Label text="Level:" horizontalAlignment="ALIGN_LEFT"/>
			</g:layer>
			<g:layer left="3.0pct" width="28.0pct" top="36.0pct" height="5.0pct">
				<g:Label text="Expected Population:" horizontalAlignment="ALIGN_LEFT"/>
			</g:layer>
			<g:layer left="3.0pct" width="20.0pct" top="43.0pct" height="5.0pct">
				<g:Label text="Meeting Days:"/>
			</g:layer>
			<g:layer left="20.0pct" top="2.5pct" height="10.0pct" right="20.0pct">
				<g:Label text="Course Details" horizontalAlignment="ALIGN_CENTER" addStyleNames="{style.view-label}"/>
			</g:layer>
			<g:layer left="35.0pct" width="55.0pct" top="15.0pct" height="5.0pct">
				<g:TextBox ui:field="courseName"/>
			</g:layer>
			<g:layer left="35.0pct" width="55.0pct" top="22.0pct" height="5.0pct">
				<g:TextBox ui:field="courseNumber"/>
			</g:layer>
			<g:layer left="35.0pct" width="55.0pct" top="29.0pct" height="5.0pct">
				<g:TextBox ui:field="level"/>
			</g:layer>
			<g:layer left="35.0pct" width="55.0pct" top="36.0pct" height="5.0pct">
				<g:IntegerBox ui:field="expectedPopulation"/>
			</g:layer>
			<g:layer left="35.0pct" width="55.0pct" top="43.0pct" height="5.0pct">
				<g:TextBox ui:field="meetingDays"/>
			</g:layer>
		</g:LayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 