<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>

			.login-button
	{
		font-family:Times New Roman;
		font-size:14px;
		float:right;
		margin-top:10px;
		margin-right:20px;
		margin-bottom:4px;
	}

			.layoutPanel
	{
		background-color:#DCDCDC;
	}


	</ui:style>
	<g:HTMLPanel ui:field="rootPanel" width="100%" height="100%">
		<g:LayoutPanel width="100%" height="100%" ui:field="AccountInfoBaseLayoutPanel" styleName="{style.layoutPanel}">
			<g:layer left="0.0pct" right="0.0pct" top="0.0pct" bottom="90.0pct">
				<g:TextBox text="Account Information" width="100%" alignment="CENTER" textAlignment="ALIGN_CENTER" ui:field="AccountInfoPgTitle" height="100%" readOnly="true"/>
			</g:layer>
						<g:layer left="5.0pct" top="10.0pct" right="5.0pct" bottom="20.0pct">
				<g:FlexTable width="100%" borderWidth="2" height="100%" ui:field="AccountInfoFlexTable" cellPadding="5" cellSpacing="5"/>
			</g:layer>
			<g:layer left="35%" top="85%" bottom="5.0pct" right="35.0pct">
				<g:Button width="100%" height="100%" ui:field="submitChangesButton" text="Submit Changes"/>
			</g:layer>
		</g:LayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 