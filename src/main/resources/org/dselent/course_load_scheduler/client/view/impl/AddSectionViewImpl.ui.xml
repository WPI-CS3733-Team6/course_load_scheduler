<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}

	.tableHeader{
		background:#494949;
		color:#ffffff;
		font-weight:bold;
	}

	.layoutPanel{
		background-color:#DCDCDC;
	}

	.layoutPanelB{
		background-color:#C1C1C1;
	}

	.whiteButton{
		background:#ffffff;
	}

	.greenButton{
		background:#78e268;
	}

	.redButton{
		background:#e0634a;
	}

	.orangeButton{
		background:#efbb43;
	}

	</ui:style>
	<g:HTMLPanel ui:field = "rootPanel">
		<g:DockLayoutPanel unit="PCT" width="100%" height="100%">
			<g:north size="24.0">
					<g:LayoutPanel width="100%" height="95%" ui:field="sectionInfoPanel" styleName="{style.layoutPanelB}">
					
						<g:layer left="20.0pct" width="100.0pct" top="15.0pct" height="35.0pct">
							<g:TextBox width="20%" height="100%" text="Course Num" ui:field="courseNumberHeader" styleName="{style.tableHeader}" readOnly="true"/>
						</g:layer>
						<g:layer left="40.0pct" width="100.0pct" top="15.0pct" height="35.0pct">
							<g:TextBox width="20%" height="100%" text="Instance No" ui:field="instanceNumberHeader" styleName="{style.tableHeader}" readOnly="true"/>
						</g:layer>
						<g:layer left="60.0pct" width="100.0pct" top="15.0pct" height="35.0pct">
							<g:TextBox width="20%" height="100%" text="Section No" ui:field="sectionNumberHeader" styleName="{style.tableHeader}" readOnly="true"/>
						</g:layer>
						
						<g:layer left="20.0pct" width="100.0pct" top="50.0pct" height="35.0pct">
							<g:TextBox width="20%" height="100%" ui:field="courseNumberField" readOnly="true"/>
						</g:layer>
						<g:layer left="40.0pct" width="100.0pct" top="50.0pct" height="35.0pct">
							<g:IntegerBox width="20%" height="100%" ui:field="instanceNumberField" readOnly="true"/>
						</g:layer>
						<g:layer left="60.0pct" width="100.0pct" top="50.0pct" height="35.0pct">
							<g:IntegerBox width="20%" height="100%" ui:field="sectionNumberField" readOnly="true"/>
						</g:layer>
					</g:LayoutPanel>
				</g:north>
				
				<g:south size="20.0">
					<g:LayoutPanel width="100%" height="100%" styleName="{style.layoutPanelB}" ui:field="saveDeletePanel">
						<g:layer left="40%" width="25%" top="20%" height="60%">
							<g:Button text="Save Changes" styleName="{style.greenButton}" ui:field="saveButton"/>
						</g:layer>
						<g:layer left="5%" width="30%" top="20%" height="60%">
							<g:Button text="Back" ui:field="backButton" styleName="{style.whiteButton}"/>
						</g:layer>
						<g:layer left="70%" width="25%" top="20%" height="60%">
							<g:Button text="Delete Instance" styleName="{style.redButton}" ui:field="deleteButton"/>
						</g:layer>
					
					</g:LayoutPanel>
				</g:south>
				
				<g:center>
					<g:LayoutPanel width="100%" height="100%" styleName="{style.layoutPanel}" ui:field="detailsPanel">
						<g:layer left="5.0pct" width="100.0pct" top="15.0pct" height="15.0pct">
							<g:TextBox width="30%" height="100%" text="Expected Population" ui:field="expectedPopHeader" styleName="{style.tableHeader}" readOnly="true"/>
						</g:layer>
						<g:layer left="5.0pct" width="100.0pct" top="30.0pct" height="15.0pct">
							<g:IntegerBox width="30%" height="100%" ui:field="expectedPopField" enabled="true"/>
						</g:layer>
						
						<g:layer left="5.0pct" width="100.0pct" top="55.0pct" height="15.0pct">
							<g:TextBox width="30%" height="100%" text="Type" ui:field="typeHeader" styleName="{style.tableHeader}" readOnly="true"/>
						</g:layer>
						<g:layer left="5.0pct" width="100.0pct" top="70.0pct" height="15.0pct">
							<g:TextBox width="30%" height="100%" ui:field="typeField" enabled="true"/>
						</g:layer>
						
						<g:layer left="50.0pct" width="100.0pct" top="15.0pct" height="15.0pct">
							<g:TextBox width="40%" height="100%" text="Days" ui:field="daysHeader" styleName="{style.tableHeader}" alignment="CENTER" readOnly="true"/>
						</g:layer>
						<g:layer left="51.0pct" width="8.0pct" top="30.0pct" height="15.0pct">
							<g:CheckBox text="M" ui:field="mondayCheck"/>
						</g:layer>
						<g:layer left="59.0pct" width="8.0pct" top="30.0pct" height="15.0pct">
							<g:CheckBox text="T" ui:field="tuesdayCheck"/>
						</g:layer>
						<g:layer left="67.0pct" width="8.0pct" top="30.0pct" height="15.0pct">
							<g:CheckBox text="W" ui:field="wednesdayCheck"/>
						</g:layer>
						<g:layer left="75.0pct" width="8.0pct" top="30.0pct" height="15.0pct">
							<g:CheckBox text="R" ui:field="thursdayCheck"/>
						</g:layer>
						<g:layer left="83.0pct" width="8.0pct" top="30.0pct" height="15.0pct">
							<g:CheckBox text="F" ui:field="fridayCheck"/>
						</g:layer>
						
						<g:layer left="50.0pct" width="100.0pct" top="55.0pct" height="15.0pct">
							<g:TextBox width="15%" height="100%" text="Time Start" ui:field="timeStartHeader" styleName="{style.tableHeader}" readOnly="true"/>
						</g:layer>
						<g:layer left="50.0pct" width="100.0pct" top="70.0pct" height="15.0pct">
							<g:IntegerBox width="4%" height="100%" ui:field="startHoursField" enabled="true" maxLength="2"/>
						</g:layer>
						<g:layer left="60.0pct" width="100.0pct" top="70.0pct" height="15.0pct">
							<g:IntegerBox width="4%" height="100%" ui:field="startMinutesField" enabled="true" maxLength="2"/>
						</g:layer>
						<g:layer left="57.0pct" width="100.0pct" top="70.0pct" height="15.0pct">
							<g:Label text=":" styleName="hourText" ui:field="timeStartSeparator"/>
						</g:layer>
						
						<g:layer left="75.0pct" width="100.0pct" top="55.0pct" height="15.0pct">
							<g:TextBox width="15%" height="100%" text="Time End" ui:field="timeEndHeader" styleName="{style.tableHeader}" readOnly="true"/>
						</g:layer>
						<g:layer left="75.0pct" width="100.0pct" top="70.0pct" height="15.0pct">
							<g:IntegerBox width="4%" height="100%" ui:field="endHoursField" enabled="true" maxLength="2"/>
						</g:layer>
						<g:layer left="85.0pct" width="100.0pct" top="70.0pct" height="15.0pct">
							<g:IntegerBox width="4%" height="100%" ui:field="endMinutesField" enabled="true" maxLength="2"/>
						</g:layer>
						<g:layer left="82.0pct" width="100.0pct" top="70.0pct" height="15.0pct">
							<g:Label text=":" styleName="hourText" ui:field="timeEndSeparator"/>
						</g:layer>
					</g:LayoutPanel>
				</g:center>
			</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 