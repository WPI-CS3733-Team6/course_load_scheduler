<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.button-blue {
		color: white;
		font-size: 12px;
		font-family: Times
		New Roman;
		background: #0558b2;
		}

		.button-bluelight {
		color: white;
		font-size: 12px;
		font-family: Times New Roman;
		background: #05abc1;
		}

		.panel-grey {
		background: #DCDCDC;
		}

		.panel-greydark {
		background:
		#989b9b;
		}

		.whiteButton{
		color: black;
		font-size: 12px;
		font-family: Times New Roman;
		background:#eaecef;
		}

	</ui:style>

	<g:HTMLPanel width="100%" height="100%" ui:field="rootPanel">
		<g:LayoutPanel width="100%" height="100%" addStyleNames="{style.panel-grey}"
			ui:field="layoutPanel">
			<g:layer left="2.0pct" top="3.0pct" right="2.0pct" bottom="80.0pct">
				<g:HorizontalPanel width="100%" height="100%"
					horizontalAlignment="ALIGN_CENTER" ui:field="selectPanel"
					verticalAlignment="ALIGN_MIDDLE">
					<g:Cell height="100%" width="25%">
						<g:Button ui:field="currentClassButton" text="Current Classes"
							width="100%" height="100%" addStyleNames="{style.whiteButton}">CurrentClasses</g:Button>
					</g:Cell>
					<g:Cell height="100%" width="25%">
						<g:Button text="Search for Classes" width="100%" height="100%"
							ui:field="classSearchButton" addStyleNames="{style.whiteButton}">Search for Classes</g:Button>
					</g:Cell>
					<g:Cell width="25%" height="100%">
						<g:Button width="100%" height="100%" ui:field="accountInfoButton" addStyleNames="{style.whiteButton}">Account
							Info</g:Button>
					</g:Cell>
					<g:Cell width="25%" height="100%">
						<g:Button width="100%" height="100%" ui:field="courseCartButton" addStyleNames="{style.whiteButton}">Course
							Registration Cart</g:Button>
					</g:Cell>
				</g:HorizontalPanel>
			</g:layer>
			<g:layer left="32.0pct" top="25.0pct" bottom="60.0pct" right="32.0pct">
				<g:Button text="Faculty Course Map" width="100%"
					addStyleNames="{style.button-blue}" height="100%" ui:field="facultyCourseMapButton" >Faculty Course Map</g:Button>
			</g:layer>
		</g:LayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 