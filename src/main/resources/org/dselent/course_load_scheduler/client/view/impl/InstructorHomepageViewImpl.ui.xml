<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.button-blue {
		color: white;
		font-size: 12px;
		font-family: Times
		New Roman;
		background: #0558b2;
		}

		.button-bluelight {
		color: white;
		font-size: 12px;
		font-family: Times New Roman;
		background: #05abc1;
		}

		.panel-grey {
		background: #DCDCDC;
		}

		.panel-greydark {
		background: #989b9b;
		}

	</ui:style>
	
	<g:HTMLPanel width="430" height="300" ui:field="rootPanel">
		<g:LayoutPanel width="100%" height="100%" addStyleNames="{style.panel-grey}" ui:field="layoutPanel">
			<g:layer left="2.0pct" top="3.0pct" right="2.0pct" bottom="82.7pct">
				<g:HorizontalPanel width="100%" height="20%%"
					horizontalAlignment="ALIGN_CENTER" ui:field="selectPanel">
					<g:Button ui:field="currentClassButton" text="Current Classes" width="100%"
						height="100%%" />
					<g:Button text="Search for Classes" width="100%" height="100%%" ui:field="classSearchButton" />
					<g:Button width="100%" height="100%%" ui:field="accountInfoButton">Account Info</g:Button>
					<g:Button width="100%" height="100%%" ui:field="courseCartButton">Course Registration Cart</g:Button>
				</g:HorizontalPanel>
			</g:layer>
			<g:layer left="2.0pct" width="49.5pct" top="15.0pct" bottom="75.0pct">
				<g:Button text="Faculty Course Map"
					width="100%" addStyleNames="{style.button-blue}" height="100%" ui:field="facultyCourseMapButton" />
			</g:layer>
			<g:layer top="29.3pct" height="67.3pct" left="2.0pct" right="2.0pct">
				<g:LayoutPanel width="100%" height="100%"
					addStyleNames="{style.panel-grey}" ui:field="bodyPanel">
					<g:layer left="4.5pct" right="3.5pct" top="11.8pct" bottom="2.2pct">
						<g:SplitLayoutPanel width="100%" height="100%" ui:field="courseInfoPanel">
							<g:north size="26.0">
								<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER"
									verticalAlignment="ALIGN_MIDDLE" width="100%" height="100%" ui:field="headerPanel">
									<g:TextBox width="100%" height="100%" text="Registered Courses"
										addStyleNames="{style.panel-greydark}" ui:field="registeredHeaderBox" />
									<g:TextBox width="100%" height="100%" text="Pending Courses"
										addStyleNames="{style.panel-greydark}" ui:field="pendingHeaderBox" />
								</g:HorizontalPanel>
							</g:north>
							<g:west size="260.0">
								<g:ListBox visibleItemCount="5" width="100%" height="100%" ui:field="registeredCourseListBox" />
							</g:west>
							<g:center>
								<g:ListBox visibleItemCount="5" ui:field="pendingCourseListBox" />
							</g:center>
						</g:SplitLayoutPanel>
					</g:layer>
					<g:layer left="35.0pct" right="35.0pct">
						<g:TextBox height="6%" width="100%" text="Course Summaries"
							textAlignment="ALIGN_CENTER" addStyleNames="{style.panel-grey}" ui:field="titleBox"/>
					</g:layer>
				</g:LayoutPanel>
			</g:layer>
		</g:LayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 